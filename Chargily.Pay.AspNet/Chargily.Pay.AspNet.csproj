<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <OutputType>Library</OutputType>
        <Authors>Chargily</Authors>
        <Description>AspNet WebApi Extension Library for C#.NET Library for Chargily Pay™ Gateway - V2</Description>
        <Copyright>© 2024 Chargily</Copyright>
        <PackageProjectUrl>https://dev.chargily.com</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Chargily/chargily-pay-csharp</RepositoryUrl>
        <RepositoryType>github</RepositoryType>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageTags>chargily;ccp;poste;algerieposte;epay;gateway;payment;edahabia;cib;ecommerce;satim;onlinepayment;aspnet;webapi;backend</PackageTags>
        <Product>Chargily.Pay.AspNet</Product>
        <PackageId>Chargily.Pay.AspNet</PackageId>
        <Version>2.0.0</Version>

        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>

        <RootNamespace>Chargily.Pay.AspNet</RootNamespace>

    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.1" />
      <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Chargily.Pay\Chargily.Pay.csproj" />
    </ItemGroup>

</Project>
